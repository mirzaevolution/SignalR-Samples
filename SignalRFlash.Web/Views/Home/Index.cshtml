@{
	ViewBag.Title = "Home Page";
}

@section scripts{
	<script src="~/SignalR/Hubs"></script>
	<script src="~/Scripts/Home/index.js"></script>
}

<br />
<h2>SignalR Demo</h2>
<br />

<div class="row">
	<div class="col-md-6">
		<form>
			<div class="form-group">
				<label>What's your name?</label>
				<input id="name" type="text" class="form-control" placeholder="Type your name" />
			</div>
			<div class="form-group">
				<label>Please type your message</label>
				<textarea id="message" class="form-control" cols="10" rows="10"></textarea>
			</div>
			<br />
			<button id="sendMessage" type="button" class="btn btn-primary">Send</button>
		</form>
	</div>
	<div class="col-md-6">
		<div id="messageList" style="height:300px;overflow-y:auto"></div>
	</div>

</div>
